<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MasonBrickTracking" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Construction Robotics brand colors -->
        <item name="colorPrimary">@color/cr_red</item>
        <item name="colorPrimaryVariant">@color/cr_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color (charcoal). -->
        <item name="colorSecondary">@color/cr_charcoal</item>
        <item name="colorSecondaryVariant">@color/cr_charcoal</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/cr_charcoal</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MasonBrickTracking.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MasonBrickTracking.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MasonBrickTracking.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
