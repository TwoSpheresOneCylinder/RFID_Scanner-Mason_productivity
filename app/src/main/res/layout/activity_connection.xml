<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/connection_root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- Banner 1: Dark charcoal header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/banner_charcoal"
            android:elevation="12dp"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rfid_connection_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/barlow_semi_condensed"
                android:textAllCaps="true"
                android:letterSpacing="0.03"
                android:textColor="@color/white"
                android:gravity="center" />
        </LinearLayout>

        <!-- Banner 2: White connection status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_elevated"
            android:elevation="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/connection_status"
                android:textSize="15sp"
                android:textColor="@color/cr_charcoal_light" />

            <TextView
                android:id="@+id/tv_connection_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disconnected"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/cr_charcoal" />
        </LinearLayout>

        <!-- Banner 3: Device info strip - tucks behind red -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_elevated"
            android:elevation="6dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/tv_device_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_device_selected"
                android:textSize="14sp"
                android:textColor="@color/cr_charcoal_light" />
        </LinearLayout>

        <!-- Banner 4: Validation checks (hidden until connected) -->
        <LinearLayout
            android:id="@+id/layout_validation_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_elevated"
            android:elevation="8dp"
            android:visibility="gone">

            <!-- Validation header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/cr_charcoal"
                android:padding="10dp"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/progress_validation"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:indeterminateTint="@color/white" />

                <TextView
                    android:id="@+id/tv_validation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SCANNER READY CHECK"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:letterSpacing="0.02"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_validation_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text=""
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Validation checks grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/white">

                <!-- Battery -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/tv_check_battery_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="○"
                        android:textSize="18sp"
                        android:textColor="@color/gray2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Battery"
                        android:textSize="10sp"
                        android:textColor="@color/cr_charcoal_light" />

                    <TextView
                        android:id="@+id/tv_check_battery_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textSize="9sp"
                        android:textColor="@color/cr_charcoal_light" />
                </LinearLayout>

                <!-- BLE -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/tv_check_ble_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="○"
                        android:textSize="18sp"
                        android:textColor="@color/gray2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scanner"
                        android:textSize="10sp"
                        android:textColor="@color/cr_charcoal_light" />

                    <TextView
                        android:id="@+id/tv_check_ble_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textSize="9sp"
                        android:textColor="@color/cr_charcoal_light" />
                </LinearLayout>

                <!-- GPS -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/tv_check_gps_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="○"
                        android:textSize="18sp"
                        android:textColor="@color/gray2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GPS"
                        android:textSize="10sp"
                        android:textColor="@color/cr_charcoal_light" />

                    <TextView
                        android:id="@+id/tv_check_gps_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textSize="9sp"
                        android:textColor="@color/cr_charcoal_light" />
                </LinearLayout>

                <!-- Network -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/tv_check_network_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="○"
                        android:textSize="18sp"
                        android:textColor="@color/gray2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Network"
                        android:textSize="10sp"
                        android:textColor="@color/cr_charcoal_light" />

                    <TextView
                        android:id="@+id/tv_check_network_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textSize="9sp"
                        android:textColor="@color/cr_charcoal_light" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Content area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Button Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/button_container_bg"
                android:padding="16dp">

                <!-- Search & Connect side by side -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btn_search_devices"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/search_devices"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:background="@drawable/button_bg_green"
                        app:backgroundTint="@null"
                        android:textColor="@color/white"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btn_connect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/connect"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:background="@drawable/button_bg_gray"
                        app:backgroundTint="@null"
                        android:textColor="@color/white"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <!-- Continue full width -->
                <Button
                    android:id="@+id/btn_continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/continue_to_tracking"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:background="@drawable/button_bg_blue"
                    app:backgroundTint="@null"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="32dp"
        android:visibility="gone" />

</FrameLayout>
