<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/main_root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- Mode Selector Banner -->
        <FrameLayout
            android:id="@+id/mode_selector_banner"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="@color/cr_charcoal"
            android:elevation="14dp">

            <!-- Sliding highlight background -->
            <View
                android:id="@+id/mode_highlight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/mode_selector_active"/>

            <!-- Mode buttons container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- Pallet Mode Button -->
                <LinearLayout
                    android:id="@+id/btn_mode_pallet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/iv_mode_pallet"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/pallet_mode_icon"
                        android:scaleType="fitCenter"
                        android:alpha="0.5"
                        android:contentDescription="Pallet Mode" />

                    <TextView
                        android:id="@+id/tv_mode_pallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PALLET"
                        android:textColor="#888888"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/barlow_semi_condensed"
                        android:letterSpacing="0.05"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

                <!-- Placement Mode Button -->
                <LinearLayout
                    android:id="@+id/btn_mode_placement"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/iv_mode_placement"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/placement_mode_icon"
                        android:scaleType="fitCenter"
                        android:alpha="1.0"
                        android:contentDescription="Placement Mode" />

                    <TextView
                        android:id="@+id/tv_mode_placement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PLACEMENT"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/barlow_semi_condensed"
                        android:letterSpacing="0.05"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- Banner 1: Charcoal header - highest z-order -->
        <LinearLayout
            android:id="@+id/banner_placements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/banner_light_charcoal"
            android:elevation="12dp"
            android:paddingHorizontal="40dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_counter_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placements"
                android:textSize="18sp"
                android:fontFamily="@font/barlow_semi_condensed"
                android:textAllCaps="true"
                android:letterSpacing="0.08"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_placement_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="72sp"
                android:textStyle="bold"
                android:fontFamily="@font/barlow_semi_condensed"
                android:textColor="@color/white"/>
        </LinearLayout>

        <!-- Banner 2: White status bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_elevated"
            android:elevation="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical">

            <!-- Left: Last scan time -->
            <TextView
                android:id="@+id/tv_last_timestamp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Last Scan: --"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/cr_charcoal"/>

            <!-- Right: Unsynced count -->
            <TextView
                android:id="@+id/tv_unsynced_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 unsynced"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/cr_charcoal_light"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Banner 3: Status strip - tucks behind red -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_elevated"
            android:elevation="6dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical">

            <!-- Scanner Battery (icon only) -->
            <ImageView
                android:id="@+id/iv_battery_status"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="fitCenter"
                android:contentDescription="Scanner Battery Level" />

            <!-- Sync Status -->
            <TextView
                android:id="@+id/tv_sync_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ready"
                android:textSize="13sp"
                android:textColor="@color/cr_charcoal"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Content area - edge to edge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Control Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <Button
                    android:id="@+id/btn_start"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="SCAN"
                    android:textSize="16sp"
                    android:background="@drawable/button_bg_green"
                    app:backgroundTint="@null"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btn_stop"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="STOP"
                    android:textSize="16sp"
                    android:background="@drawable/button_bg_red"
                    app:backgroundTint="@null"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <!-- Back Button -->
            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="BACK"
                android:textSize="16sp"
                android:background="@drawable/button_bg_blue"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
